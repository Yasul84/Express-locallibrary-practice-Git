extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='') 
        div.form-group 
            label(for='name') Genre name: 
            input(type='text' required='true' placeholder='Genre type' name='name' value=(undefined === genre ? '' : genre.name)) 
        button.btn.btn-primary(type='submit') Submit 
    
    if errors
        ul 
            each error in errors 
                li!= error.msg
            